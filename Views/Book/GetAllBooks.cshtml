@model IEnumerable<BookModel>
@{
  ViewData["Title"] = "All Books";
}

<div class="container">
    <h2 class="display-4">All Books</h2>
    
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-md-6 col-lg-4">
                <partial name="_BookThumbnail" model="@book" />
            </div>
        }
    </div>
</div>
